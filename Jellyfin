version: "3.9"
services:
  jellyfin:
    image: jellyfin/jellyfin:latest
    container_name: jellyfin
    restart: unless-stopped
    ports:
      - "8096:8096"
      - "8920:8920"
    volumes:
      - $HOME/.docker/jellyfin/config:/config
      - $HOME/multimedia/peliculas:/movies
      - $HOME/multimedia/series:/tvshows
      - $HOME/multimedia/musica:/music
    environment:
      - TZ=America/Argentina/Buenos_Aires
    network_mode: bridge
